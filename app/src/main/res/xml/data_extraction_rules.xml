<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Include QSO logs and non-sensitive settings -->
        <include domain="database" path="." />
        <include domain="sharedpref" path="." />
        <include domain="file" path="datastore/" />
        <!-- SECURITY: Exclude encrypted preferences containing API keys -->
        <exclude domain="sharedpref" path="hamhub_secure_prefs.xml" />
        <exclude domain="sharedpref" path="__androidx_security_crypto_encrypted_prefs__.xml" />
    </cloud-backup>
    <device-transfer>
        <!-- Include QSO logs and non-sensitive settings -->
        <include domain="database" path="." />
        <include domain="sharedpref" path="." />
        <include domain="file" path="datastore/" />
        <!-- SECURITY: Exclude encrypted preferences containing API keys -->
        <exclude domain="sharedpref" path="hamhub_secure_prefs.xml" />
        <exclude domain="sharedpref" path="__androidx_security_crypto_encrypted_prefs__.xml" />
    </device-transfer>
</data-extraction-rules>
