<?xml version="1.0" encoding="utf-8"?>
<animated-vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:drawable="@drawable/ic_splash_animated">

    <target android:name="wave_left_1">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:propertyName="strokeAlpha"
                android:valueFrom="0"
                android:valueTo="1"
                android:valueType="floatType"
                android:duration="400"
                android:repeatCount="3"
                android:repeatMode="reverse" />
        </aapt:attr>
    </target>

    <target android:name="wave_left_2">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:propertyName="strokeAlpha"
                android:valueFrom="0"
                android:valueTo="1"
                android:valueType="floatType"
                android:startOffset="200"
                android:duration="400"
                android:repeatCount="3"
                android:repeatMode="reverse" />
        </aapt:attr>
    </target>

    <target android:name="wave_right_1">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:propertyName="strokeAlpha"
                android:valueFrom="0"
                android:valueTo="1"
                android:valueType="floatType"
                android:duration="400"
                android:repeatCount="3"
                android:repeatMode="reverse" />
        </aapt:attr>
    </target>

    <target android:name="wave_right_2">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:propertyName="strokeAlpha"
                android:valueFrom="0"
                android:valueTo="1"
                android:valueType="floatType"
                android:startOffset="200"
                android:duration="400"
                android:repeatCount="3"
                android:repeatMode="reverse" />
        </aapt:attr>
    </target>

</animated-vector>
